    "jest": "^25.1.0",
    "ts-jest": "25.0.0",
    "tslint": "6.0.0",
    "typescript": "3.7.5",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2"
  },
  "web3Wallet": {
    "bundle": {
